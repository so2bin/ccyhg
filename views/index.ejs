//            var goods    = $('.good-info');
//            var goodH    = goods.length === 0 ? 150 : parseInt(goods.height());
//            var gdTotalH = goods.length * goodH;
//            var scrollH  = parseInt($('.scroll-list').css('height'));
//            var divH     = gdTotalH > scrollH ? gdTotalH : scrollH;
//            return divH + 170;
//        });

        // 没有数据的时间也能下拉刷新
        $('#nulldata').css('height', function () {
            // 不能-51，这样高度刚好满足，就不会出现scroll
            return parseInt($('.scroll-list').css('height'));
