        $('.scroll-list').css('height', function () {
            // 51为补全　'下拉更新'　元素的高度 (pullDown)
            return parseInt($('.goods-lists').css('height')) + 100;
        })

        // '.scroll-list>div'元素的高度不能小于$('.scroll-list')，否则无法使用iscroll
        // 不需要这段代码，用自动的100%就可以了
