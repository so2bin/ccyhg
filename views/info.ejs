<div id="content">
    <h1 class="title">
        物品查询系统
    </h1>

    <div id="btns-getInfo">
        <div class="btn-info">
            <button id="btn-getInfo">请求数据</button>
        </div>
        <div class="btn-info">
            <button id="btn-delRow">多选</button>
        </div>
        <div class="btn-info">
            <button id="btn-clearSel" disabled>取消选择</button>
        </div>
        <div class="btn-info">
            <button id="btn-edit" disabled>编辑</button>
        </div>
    </div>

    <table id="table-goods-list" class="display compact"></table>

    <div id="loading" style="display: none;">数据正在交互之中...</div>
</div>

<!--  物品查询页面的编辑器采用对话框的形式，页面内容与物品上传页面基本一样  -->
<div id="tbl-editor" style="display: none">
    <div id="editor">
        <form action="">
            商品ID：<input id="goodsId" disabled value="000000">
            <br/>
            入库时间：<input type="text" id="ftime" value="">
            <div id="keySel">
                <label for="mainKey">主类</label><span class="must-star">*</span>
                <select name="mainKey" id="mainKey"></select>
                <br/>
                <label for="subKey1">子类1</label>
                <select name="subKey1" id="subKey1"></select>
                <br/>
                <label for="subKey2">子类2</label>
                <select name="subKey2" id="subKey2"></select>
            </div>

            <div id="goodstitle">
                商品描述信息：<span class="must-star">*</span>
                <br/>
                <textarea name="goodstitle"></textarea>
            </div>
            <div class="description">
                <div id="step1">
                    购买步骤1：<span class="must-star">*</span>
                    <br/>
                    <textarea name="step1"></textarea>
                </div>
                <div id="step2">
                    购买步骤2：
                    <br/>
                    <textarea name="step2"></textarea>
                </div>
            </div>

            <div id="price">
                <div id="realPrice" class="price">
                    劵后价格：<span class="must-star">*</span>
                    <input type="text" name="realPrice">
                    元
                </div>

                <div id="coupon" class="price">
                    优惠价格：<span class="must-star">*</span>
                    <input type="text" name="coupon">
                    元
                </div>
            </div>
        </form>

        <div id="picDiv">
            上传展示图片(最多3张):
            <input id="file-input" type="file" multiple />
            <div id="previewPic"></div>
        </div>

        <div class="submitButton">
            <input type="submit" value="取消"  id="cancelSubmit">
            <input type="submit" value="更新"  id="formSubmit">
        </div>
    </div>
    <!--半透明掩盖层-->
    <div id="editor-backup"></div>
</div>



